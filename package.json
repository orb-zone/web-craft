{
  "name": "@orb-zone/web-craft",
  "version": "0.0.0",
  "private": true,
  "description": "Bun workspace monorepo for @orb-zone packages",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "test:unit": "bun test packages/*/test/unit",
    "test:integration": "bun test packages/*/test/integration",
    "test:watch": "bun test --watch",
    "type-check": "bun run --filter '*' typecheck",
    "lint": "bun run --filter '*' lint",
    "format": "bun run --filter '*' format",
    "format:check": "bun run --filter '*' format:check",
    "examples:basic": "bun examples/basic-usage.ts",
    "examples:variants": "bun examples/variants-i18n.ts",
    "examples:fileloader": "bun examples/file-loader-i18n.ts",
    "examples:zod": "bun examples/zod-schema-validation.ts",
    "examples:all": "bun examples/basic-usage.ts && bun examples/variants-i18n.ts && bun examples/file-loader-i18n.ts && bun examples/zod-schema-validation.ts",
    "changeset:add": "bunx @changesets/cli add",
    "changeset:version": "bunx @changesets/cli version",
    "changeset:publish": "bunx @changesets/cli publish",
    "clean": "rm -rf packages/*/dist packages/*/.turbo packages/*/node_modules .turbo node_modules"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "@changesets/cli": "^2.27.0"
  }
}
