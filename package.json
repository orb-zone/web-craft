{
  "name": "@orb-zone/web-craft",
  "version": "0.0.0",
  "private": true,
  "description": "Bun workspace monorepo for @orb-zone packages",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "test:unit": "bun test test/unit",
    "test:integration": "bun test test/integration",
    "test:watch": "bun test --watch",
    "lint": "bun run --filter '*' lint",
    "typecheck": "bun run --filter '*' typecheck",
    "format": "bun run --filter '*' format",
    "changeset:add": "bunx @changesets/cli add",
    "changeset:version": "bunx @changesets/cli version",
    "changeset:publish": "bunx @changesets/cli publish"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "@changesets/cli": "^2.27.0"
  }
}
