{
  "name": "@orb-zone/surrounded",
  "version": "0.0.0",
  "type": "module",
  "description": "SurrealDB integration framework with Vue 3 composables, built on @orb-zone/dotted",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/orb-zone/web-craft",
    "directory": "packages/surrounded"
  },
  "homepage": "https://github.com/orb-zone/web-craft/tree/main/packages/surrounded",
  "keywords": [
    "surrealdb",
    "vue3",
    "real-time",
    "live-queries",
    "composables",
    "pinia"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./composables": {
      "types": "./dist/composables/index.d.ts",
      "import": "./dist/composables/index.js",
      "require": "./dist/composables/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "bun run build:esbuild && bun run typecheck",
    "build:esbuild": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=neutral && tsc --emitDeclarationOnly --outDir dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src test --fix",
    "test": "bun test",
    "test:unit": "bun test test/unit",
    "test:integration": "bun test test/integration",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@orb-zone/dotted": "workspace:*"
  },
  "peerDependencies": {
    "surrealdb": "^1.0.0 || ^2.0.0",
    "@pinia/colada": "^0.7.0",
    "pinia": "^2.0.0",
    "vue": "^3.0.0",
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "@pinia/colada": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.54.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  }
}
