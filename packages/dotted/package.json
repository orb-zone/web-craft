{
  "name": "@orb-zone/dotted",
  "version": "2.0.0",
  "type": "module",
  "description": "Core JSON dotted path library with expression evaluation, variants, and i18n support",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/orb-zone/web-craft",
    "directory": "packages/dotted"
  },
  "homepage": "https://github.com/orb-zone/web-craft/tree/main/packages/dotted",
  "keywords": [
    "json",
    "dotted-path",
    "expression-evaluation",
    "variants",
    "i18n",
    "translation"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./zod": {
      "types": "./dist/plugins/zod.d.ts",
      "import": "./dist/plugins/zod.js",
      "require": "./dist/plugins/zod.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "bun run build:esbuild && bun run typecheck",
    "build:esbuild": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=neutral && tsc --emitDeclarationOnly --outDir dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src test --fix",
    "test": "bun test",
    "test:unit": "bun test test/unit",
    "test:integration": "bun test test/integration",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "dot-prop": "^8.0.2"
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.54.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  }
}
